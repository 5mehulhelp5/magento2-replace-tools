{
    "name": "yireo/magento2-replace-tools",
    "description": "Tools to maintain yireo/magento2-replace packages",
    "type": "composer-plugin",
    "autoload": {
        "psr-4": {
            "Yireo\\ReplaceTools\\": "src/"
        }
    },
    "require": {
        "composer-plugin-api": "^2.0",
        "guzzlehttp/guzzle": "^6.0 || ^7.0",
        "symfony/console": "^5.0 || ^6.0 || ^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "phpunit/phpunit": "^9.2 || ^10.0"
    },
    "extra": {
        "class": "Yireo\\ReplaceTools\\Composer\\Plugin"
    }
}
